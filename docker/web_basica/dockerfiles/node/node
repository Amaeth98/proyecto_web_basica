FROM adri/nginx

RUN apt update && apt install -yq curl ca-certificates && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt install -yq nodejs


RUN mkdir -p /root/admin/node
RUN mkdir -p /root/admin/node/proyecto_web_basica/web_basica_adriana
WORKDIR /root/admin/node
COPY ./proyecto_web_basica/web_basica_adriana/* /root/admin/node/proyecto_web_basica/web_basica_adriana
COPY ./dockerfiles/node/admin/start.sh .
RUN chmod +x ./start.sh

ENTRYPOINT [ "./start.sh" ]