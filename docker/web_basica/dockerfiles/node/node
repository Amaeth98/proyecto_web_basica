FROM adri/nginx

RUN apt install -yq --no-install-recommends \
    nodejs \
    npm

RUN mkdir -p /root/admin/node
RUN mkdir -p /root/admin/node/proyecto_web_basica/web_basica_adriana
WORKDIR /root/admin/node
COPY ./proyecto_web_basica/web_basica_adriana/web_basica_adriana/ /root/admin/node/proyecto_web_basica/web_basica_adriana
COPY ./dockerfiles/node/admin/start.sh .
RUN chmod +x ./start.sh

ENTRYPOINT [ "./start.sh" ]